			<td class="field"><%= @committable.class.name.titleize %>: </td>
			<td><%= @committable.name %></td>
		</tr>
		<tr>
			<td class="field"><%= f.label :repository_url %>: </td>
			<td><%= text_field_tag :repository_url, @commit.repository_url %></td>
		</tr>
		<tr>
			<td class="field"></td>
			<td><%= f.submit %></td>
		</tr>
	</table>
<% end %>
