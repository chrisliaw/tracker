<%= form_for([@committable.project,@committable,@commit]) do |f| %>
  <% if @commit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@commit.errors.count, "error") %> prohibited this commit from being saved:</h2>

      <ul>
      <% @commit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<table class="std">
		<tr>
			<td class="field">Project:</td>
			<td><%= @committable.project.name %></td>
		</tr>
